# API Configuration
API_TITLE=Video Transcription API
API_VERSION=1.0.0
DEBUG=false

# Server Configuration
HOST=0.0.0.0
PORT=8000

# File Processing
MAX_FILE_SIZE_MB=500
TEMP_DIR=./temp
ALLOWED_EXTENSIONS=[".mp4", ".avi", ".mov", ".mkv", ".webm"]

# Whisper Configuration
WHISPER_MODEL_SIZE=base
WHISPER_CACHE_DIR=./temp/whisper_cache

# Security
API_KEY=your_secure_api_key_here

# Supported Languages Configuration
SUPPORTED_LANGUAGES={"auto": "Auto-detect", "es": "Spanish", "en": "English", "fr": "French", "de": "German", "it": "Italian", "pt": "Portuguese", "zh": "Chinese", "ja": "Japanese", "ko": "Korean", "ru": "Russian", "ar": "Arabic"}

# Advanced Translation Service Configuration
# DeepL API (Highest Quality)
DEEPL_API_KEY=your_deepl_api_key_here

# Microsoft Translator (Cost-effective, 100+ languages)
MICROSOFT_TRANSLATOR_KEY=your_microsoft_translator_key_here
MICROSOFT_TRANSLATOR_REGION=global

# LibreTranslate (Self-hosted, Privacy-focused)
LIBRETRANSLATE_URL=http://localhost:5000
